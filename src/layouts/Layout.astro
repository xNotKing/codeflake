<style is:global>
	* {
		margin: auto;
		padding: auto;
	}
	:root {
		--accent-gradient: linear-gradient(45deg, #36a5bb, #21c4e4 30%, white 60%);
	}
	html {
		font-family: system-ui, sans-serif;
		background-color: #F6F6F6;
	}
	code {
		font-family: Menlo, Monaco, Lucida Console, Liberation Mono, DejaVu Sans Mono,
			Bitstream Vera Sans Mono, Courier New, monospace;
	}
	body {
		display: flex;
		flex-direction: column;
		width: 100%;
		min-height: 100vh;
		padding-bottom: 30px;
	}
	nav img {
		margin: 0;
	}
	nav .content {
		display: flex;
		flex-direction: row;
		align-items: center;
		margin-left: 0;
	}
	nav .content a {
