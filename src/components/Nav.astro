---
import logo from '/public/codeflakelogo.png';
---
<style>
    nav {
        display: flex;
        flex-direction: row;
        align-items: center;
        margin: 0;
    }
    nav img {
        margin-left: 0;
        object-fit: cover;
        height: 140px;
    }
    nav .menu {
        display: none;
    }
    @media (max-width: 450px) {
        nav .menu {
            display: block;
        }
        nav .menu .fas {
            padding-right: 0px;
            margin-right: 0px;
        }
        nav .content {
            display: none;
        }
        nav img {
            height: 100px;
        }
    }
</style>
<nav>
    <img src={logo} alt="codeflake" loading="lazy"/>
    <div class="content">
        <slot/>
    </div>
    <div class="menu" onclick="location.href = '/'">
        <i class="fas fa-bars"></i>
    </div>
</nav>