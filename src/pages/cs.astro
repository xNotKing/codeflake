---
import Layout from "../layouts/Layout.astro";
import Nav from '../components/Nav.astro';
import Card from '../components/Card.astro';
---
<Nav>
    <a href="/">Home</a>
    <a href="/cs">CS</a>
</Nav>
<Layout title="Codeflake CS">
    <header>
        <h1>Computer Science</h1>
        <p>Welcome to the computer science course! Learn about Windows.</p>
    </header>  
    <main>
        <Card
			href="/cs/intro"
			title="Introduction"
			body="Itroduction to Computer Science course."
		/>
        <Card
			href="/cs/calculator"
			title="Windows Calculator"
			body="How does the windows calculator work?"
		/>
        <Card
			href="/cs/binary"
			title="Binary"
			body="Learn about Binary."
		/>
    </main>
</Layout>
<style>
    * {
        margin: auto;
        padding: auto;
    }
    header {
        display: flex;
        flex-direction: column;
        align-items: center;
        width: 100%;
        color: #fff;
        height: 300px;
        background-color: rgb(62, 60, 79);
    }
    main {
		margin: auto;
		padding: 1.5rem;
		width: 80%;
		font-family: 'Fira Sans', sans-serif;
	}
    .link-card-grid {
		display: grid;
		grid-template-columns: repeat(3, 1fr);
		padding: 0;
	}
    a {
        color: #000;
        text-decoration: none;
    }
</style>