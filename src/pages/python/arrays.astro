<style>
    main {
        width: 80%;
        max-width: 520px;
        padding: 0 16px;
    }
    main p {
        margin-top: 20px;
        margin-bottom: 20px;
    }
    main svg {
        width: 25px;
        height: 25px;
    }
    .code {
		width: 100%;
		padding: 8px;
		color: #fff;
		background-color: #3f5c6f;
		border-radius: 7px;
		font-family: system-ui, sans-serif;
	}
    .code indent {
        margin-left: 15px;
    }
    table {
        padding: 8px;
        border-radius: 7px;
        width: 100%;
        border: 2px solid rgb(255, 187, 60);
    }
    table *{
        padding: 3px;
        border-right: 2px solid rgb(255, 187, 60);
    }
    table *:nth-child(5) {
        border: none;
    }
    a {
        text-decoration: none;
        color: #000;
    }
    img {
        object-fit: cover;
        width: 100%;
        height: 200px;
    }
    @media (max-width: 450px) {
        img {
            object-fit: contain;
        }
    }
</style>